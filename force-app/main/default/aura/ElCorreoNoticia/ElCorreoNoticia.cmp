<aura:component >
	 <aura:attribute name="noticia" type="Noticia" default="{'Titular': '',
                                                                     'UrlImagenGrande': '',
                                                                     'Entradilla': '',
                                                                     'listaParrafos': null
                                                                     }" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    
    <div id="titular">
        <h1>{!v.noticia.Titular}</h1>
    </div>
    <div id="entradilla">
        <h2>{!v.noticia.Entradilla}</h2>
    </div>
    <div id="parrafos">
        <aura:iteration items="{!v.noticia.listaParrafos}" var="parrafo">
            <aura:if isTrue="{!parrafo.Strong}">
                	<p class="strong">{!parrafo.Texto}</p>
            <aura:set attribute="else">
                <aura:if isTrue="{!parrafo.esImg}">
                        <img src="{!parrafo.Texto}" />
                <aura:set attribute="else">
                        <p>{!parrafo.Texto}</p>
                </aura:set>
                </aura:if>
            </aura:set>
            </aura:if>
            
        </aura:iteration>
    </div>
</aura:component>